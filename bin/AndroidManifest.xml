            </intent-filter>
        </activity>
        
        <activity
            android:name=".CircleDetailActivity"
            android:label="@string/title_circle_detail"
            android:parentActivityName=".CircleListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CircleListActivity" />
        </activity>
        
